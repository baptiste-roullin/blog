---js
{
layout: "post",
hideMeta: true,
contentType:"thread",
pagination:
	 {
	 data: "threads",
	 size: 1,
	 alias: "thread"
	 },
permalink: "threads/{{thread.title | slugify }}/",
eleventyComputed: {
	 title: (data) =>  data.pagination?.items[0]?.title,
	 }
}
---

{% for tweet in thread.tweets | reverse %}
	 <article class="prose-tcqb">
		  <h2 class=".cta-heading2 ">{{tweet.created_at | dateHumanFormat("dd LLLL yyyy")}}</h2>
				{{tweet.text | markdownify | safe  }}
		  <div class="rich-picture-gallery">
				{% for url in tweet.media %}
					 <img src="{{url}}"></img>
				{% endfor %}
		  </div>
		  <div>
				{% for tweet in tweet.QT | reverse %}
					 <h2 class=".cta-heading2 ">{{tweet.created_at | dateHumanFormat("dd LLLL yyyy")}}</h2>
					 {{tweet.text | markdownify | safe  }}
					 <div class="rich-picture-gallery">
						  {% for url in tweet.media %}
								<img src="{{url}}"></img>
							{% endfor %}
				{% endfor %}

		  </div>

	 </article>

{% endfor %}

