<!DOCTYPE html>
<html lang="fr" class="font-sans">
	<head>
		{%- include "components/head.njk" %}

	</head>
	<body
  class="template-{{layout}} page-{{page.fileSlug}} text-gray-900 sans">
		{#    <div hidden>{% svgsprite %}</div>
#}
		<div class="min-h-screen mx-auto container-2xl">
			{% include "components/nav.njk" %}

			<main
      id="content"
       class="  {{'bg-dark' if page.fileSlug == 'home'}} sm:px-per-lg px-per  relative flex-grow block max-w-full transition-all duration-300 ease-out " id="content">
				{{ content | safe }}
			</main>

			{% include "components/footer.njk" %}
		</div>
		{% if richPicture === true %}
			{% include "../components/rich-picture.njk" %}

			{% set css %}
			{% include "src/assets/css/photoswipe/photoswipe.css" %}
			{% include "src/assets/css/photoswipe/skin.css" %}
			{% endset %}

			<style>
				{{css | minify('css') | safe}}
			</style>
			<script  src="/assets/scripts/{{hashes_js['richPicture.js']}}" defer></script>
		{% endif %}

		{% for tag in tags %}

			{% if tag === "post" %}

				<script  src="/assets/scripts/{{hashes_js['arrowWidth.js']}}" defer></script>

			{% endif %}
		{% endfor %}

	</body>
</html>