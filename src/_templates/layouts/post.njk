---
layout: base
---
<div >
	<article class="template-post image-responsiver-content" {{ "data-pagefind-body" if  not draft}}>
		{% if hero.image %}
			{% include 'components/header_hero_image.njk' %}
		{% endif %}
		<div class="my-20 post-main prose-tcqb article sm:px-4 xl:px-0 container-prose ">
			{% if not hero.image %}
				<header class="">
					<h1 data-pagefind-weight="9" class="m-auto text-gray-700 text-balance">{{ title }}</h1>
					{% if not hideMeta %}
						<div class="pt-4 text-sm sm:text-base not-prose">
							{# TODO: ajouter 'première date de publication'
            #}
							<time  datetime="{{ page.date | dateFormatting("yyyy-MM-dd") }}">
								{{ page.date | dateFormatting("dd LLLL yyyy") }}
							</time>
							{% include "components/separator.njk" %}
							{% include "components/tags_pills_inline.njk" %}
						</div>
					{% endif %}
				</header>
			{% endif %}
			<div class="my-16 post-main prose-tcqb " >{{ content | safe }}</div>
		</div>
		<aside data-pagefind-meta="description" style="display: none;">{{description}}</aside>
		<aside data-pagefind-meta="collatedHeroImage"  style="display: none;">{{collatedHeroImage}}</aside>

		<aside data-pagefind-meta="date" style="display: none;">{{date | dateFormatting("yyyy-MM-dd") }}
		</aside>

	</article>
	{% set nextPost = collections.publishedPosts | getPreviousCollectionItem %}
	{% set previousPost = collections.publishedPosts | getNextCollectionItem %}
	{% if nextPost or previousPost %}
		<footer class="relative mt-16 text-xl md:text-2xl">
			<div class="h-full decor-dark bg-roi-light"></div>
			{# ===== Previous and Next =====  #}

			{% include "components/paginationNamed.njk" %}
		</footer>
	{% endif %}

</div>

