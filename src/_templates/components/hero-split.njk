<header class="relative flex flex-col mb-8 h-max lg:flex-row hero-split lg:mb-18">
	<div class=" decor-dark bg-dark h-17/20"></div>
	<div
        class="flex flex-col m-8 mx-auto lg:justify-center lg:w-1/2 lg:text-left block-dark"
      >
		<h1
        class="mb-4 text-3xl font-semibold lg:whitespace-pre-line text-shadow-lg-dark lg:mr-8 sm:leading-none md:text-4xl xl:text-5xl"
          >
			{{ title | markdownify | safe }}
		</h1>

		<div class="pt-4 text-base metadata sm:text-lg not-prose ">
			<time datetime="{{ page.date | dateHumanFormat("yyyy-MM-dd") }}">
				{{ page.date | dateHumanFormat("dd LLL yyyy") }}
			</time>
			<span aria-hidden="true" class="mx-1 text-xl font-light sm:mx-2 sm:inline" >~</span>

			{% include "components/tagpills-inline.njk" %}

		</div>

	</div>
	<div
        class="flex justify-center h-auto mx-auto lg:w-1/2 img-wrapper"
      >

		<img  alt="{{hero.alt}}"
          title="{{hero.alt}}"
          class="shadow-lg-dark"
          src="/assets/imagesToProcess/{{ hero.image }}"
/>

	</div>
</header>