<header class="relative flex flex-col h-auto mb-8 lg:flex-row hero-split lg:mb-18">
	<div class=" decor-dark bg-dark h-1/2"></div>
	<div
        class="flex flex-col m-8 mx-auto lg:justify-center text-gray-50 lg:w-1/2 lg:text-left"
      >
		<h1
        class="mb-4 text-3xl font-semibold text-shadow-lg-dark lg:mr-8 sm:leading-none md:text-4xl xl:text-5xl"
          >
			{{ title | safe }}
		</h1>

		<div class="pt-4 text-base sm:text-lg UI text-gray-50">
			<time datetime="{{ page.date | dateHumanFormat("yyyy-MM-dd") }}">
				{{ page.date | dateHumanFormat("dd LLL yyyy") }}
			</time>
			{% include "components/tagpills-inline.njk" %}

		</div>

	</div>
	<div
        class="flex justify-center h-auto mx-auto lg:w-1/2 img-wrapper"
      >

		<img  alt="{{hero.alt}}"
          title="{{hero.alt}}"
          class="shadow-lg-dark"
          src="/assets/imagesToProcess/{{ hero.image }}"
/>

	</div>
</header>