<li
class="flex flex-col gap-4 p-5 text-center list-none transition-all duration-300 cursor-pointer hover:shadow-flat card-base project lg:gap-6 lg:p-8"
>

  {% if projet.img %}
    <img
    onclick="window.location.href='{{projet.link}}'"

        loading="lazy"
        class="object-cover w-3/4 mx-auto cursor-pointer rounded-4xl picture"
        src="{{projet.img}}">

  {% endif %}

  <div class="flex flex-col justify-between h-full gap-4 lg:gap-6 ">
    <h3 class=" cta-heading">
      <a href="{{ projet.link }}" class="block hover:underline hover:text-accent2">
        {{ projet.name }}
      </a>
    </h3>
    <p class="m-0 label description">{{projet.description}}</p>
  </div>
</li>