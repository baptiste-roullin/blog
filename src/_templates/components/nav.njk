      <div id="site-title-text"
        class=" tracking-tight ml-4 lg:ml-8 relative bottom-0.5 sm:bottom-auto flex font-medium content-center text-shadow-lg-dark text-xl-bis sm:text-3lg lg:text-4xl text-gray-100">
        Tout ce qui bouge
        </div>
    </a>

    {# =======    ENTRÃ‰ES MENU DESKTOP      ========= #}

    <div class="hidden gap-8 m-auto sm:m-0 sm:flex sm:items-center xl:gap-12 pr-[1vw]">

      {% for entry in navPages %}
        <a href="{{ entry.url | url }}"
        aria-current="{{ 'true' if entry.url in page.url }}"
        class="relative items-center h-full text-xl font-medium text-gray-100 group text-shadow focus:text-white focus:group-accent">
          <span
          class="w-[140%] flex items-center justify-center h-full
               {{ 'underline' if entry.url in page.url }}
              group-hover:text-white group-hover:bg-accent transition-all duration-300
          ">{{ entry.title }}</span>
        </a>
      {% endfor %}
    </div>

    {# =======    BOUTON BURGER       ========= #}

    <div class="flex items-center sm:hidden" id="menu-bar">
      <button  class="relative inline-flex items-center justify-center p-2 text-gray-200 transition-transform duration-150 ease-in-out rounded-md focus:outline-none focus:text-accent active:text-accent2"
       aria-label="Menu principal" aria-expanded="false">

        <div id="trigger-zone" class="absolute w-16 h-16 -right-1.5"></div>
        {# Icon when menu is closed.  #}

        <svg width="24" height="24" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 3H17M2.5 9H15.5M1 15H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>

        {# Icon when menu is open.  #}
        <svg class="hidden " width="24" height="24" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L13 13M1 13L13 1L1 13Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>

      </button>
    </div>
  </div>

</header>