{% set navPages = collections.pages | eleventyNavigation %}
<header role="banner" class="navbar lg:px-per lg:bg-dark ">

  {# =======    MENU OFF CANVAS MOBILE      ========= #}
  <div
  id="menu-offcanvas"
  class="relative transition-transform duration-200 ease-out bg-dark-lighter sm:hidden ">

    {% for entry in navPages %}

      <a href="{{ entry.url | url }}"
              aria-current="{{ 'true' if entry.url in page.url }}"

          class="relative flex h-20 text-xl font-medium text-center text-gray-200 px-per lg:p-0 last:z-50 focus:outline-none focus:text-accent active:text-accent2">

        <span class=" m-auto relative
            {% if entry.url in page.url %}
              nav-selected mobile
            {% endif %}
           ">{{ entry.title }}
        </span>
      </a>
    {% endfor %}

  </div>

  <div id="menu-bar" class="relative z-10 flex justify-between h-20 px-per lg:p-0 bg-dark ">

    {# =======    TITRE      ========= #}

    <a id="site-title" title="lien vers la page d'accueil"class="flex flex-row my-auto" href="{{ '/' |  url}}">
